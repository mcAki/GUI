	<include file="struts-supply.xml"></include>
	<include file="struts-order.xml"></include>
	<include file="struts-spplyscorelog.xml"></include>
	<include file="struts-operationLog.xml"></include>
	<include file="struts-supplyInterface.xml"></include>
	<include file="struts-cardLib.xml"></include>
	<include file="struts-goods.xml"></include>
	<include file="struts-goodsType.xml"></include>
	<include file="struts-91ka.xml"></include>
	<include file="struts-otp.xml"></include>
	<include file="struts-liandong.xml"></include>
	<include file="struts-statistics.xml"></include>
	<include file="struts-useraccountdealdetail.xml"></include>
	<include file="struts-http.xml"></include>
	<include file="struts-area.xml"></include>
	<include file="struts-games.xml"></include>
	<include file="struts-zhongrong.xml"></include>
	<include file="struts-alipay.xml"></include>
	<include file="struts-otherMes.xml"></include>
